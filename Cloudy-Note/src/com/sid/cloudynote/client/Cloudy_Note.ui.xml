<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:cn='urn:import:com.sid.cloudynote.client.view'>

	<g:DockLayoutPanel unit='PCT' ui:field="dockLayoutPanel">
		<g:north size='15'>
			<cn:TopPanel ui:field='topView' />
		</g:north>

		<g:south size='5'>
			<cn:BottomPanel ui:field='bottomView' />
		</g:south>

		<g:west size='15'>
			<cn:NotebookListView ui:field='notebookListView' />
		</g:west>

		<g:center>
			<g:SplitLayoutPanel>
				<g:west size='300'>
					<cn:NoteListView ui:field='noteListView' />
				</g:west>

				<!-- <g:north size='200'> <mail:MailList ui:field='mailList' /> </g:north> -->
				<g:center>
					<cn:NoteViewPanel ui:field='noteView' />
				</g:center>
			</g:SplitLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
