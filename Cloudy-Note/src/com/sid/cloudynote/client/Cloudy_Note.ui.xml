<!DOCTYPE ui:UiBinder 
  SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"
>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:cn='urn:import:com.sid.cloudynote.client.view'>

	<ui:style>
		.statusDiv {
			text-align: right;
			margin: 1em;
		}
		
		.linksDiv {
			text-align: right;
		}
		
		.logo {
			gwt-image: 'logo';
			position: absolute;
		}
		}
	</ui:style>

	<g:DockLayoutPanel unit='PCT' ui:field="dockLayoutPanel">
		<g:north size='15'>
			<g:VerticalPanel height="100%" width="100%">
				<g:HTMLPanel>
					<div class='{style.logo}' />
					<div class="{style.statusDiv}">
						<div>
							<g:Label ui:field="user" text="Welcome back, foo@example.com"/>
						</div>

						<div class='{style.linksDiv}'>
							<g:Anchor href='javascript:;' ui:field='signOutLink'>Sign Out
							</g:Anchor>
        &nbsp;
							<g:Anchor href='javascript:;' ui:field='aboutLink'>About</g:Anchor>
						</div>
					</div>
				</g:HTMLPanel>
				<cn:SearchView ui:field='searchView' />
			</g:VerticalPanel>
		</g:north>

		<g:south size='5'>
			<cn:BottomView ui:field='bottomView' />
		</g:south>

		<g:west size='15'>
			<cn:NotebookListView ui:field='notebookListView' />
		</g:west>

		<g:center>
			<g:SplitLayoutPanel>
				<g:west size='300'>
					<cn:NoteListView ui:field='noteListView' />
				</g:west>

				<!-- <g:north size='200'> <mail:MailList ui:field='mailList' /> </g:north> -->
				<g:center>
					<cn:NoteView ui:field='noteView' height="100%" width="100%"/>
				</g:center>
			</g:SplitLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
