<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cn="urn:import:com.sid.cloudynote.client.view"
	xmlns:ck="urn:import:com.axeiya.gwtckeditor.client">
	<ui:style>
		.editPanel {
			border-top: 1px solid #999;
			border-left: 1px solid #999;
			border-right: 1px solid #999;
			border-bottom: 1px solid #999;
		}
		
		.title {
			background-color: #CCC;
			border-bottom: 1px solid #000;
		}
	</ui:style>

	<g:DockLayoutPanel styleName="{style.editPanel}"
		unit="PCT">
		<g:north size="20">
			<g:VerticalPanel>
				<g:TextBox ui:field="title"></g:TextBox>
				<g:ListBox ui:field="notebook"></g:ListBox>
				<g:Anchor ui:field="attach">Attach files</g:Anchor>
			</g:VerticalPanel>
		</g:north>
		<g:center>
			<ck:CKEditor ui:field='ckeditor' />
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 