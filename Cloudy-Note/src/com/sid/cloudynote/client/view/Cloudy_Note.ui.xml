<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:cn='urn:import:com.sid.cloudynote.client.view'>

  <g:DockLayoutPanel unit='PCT'>
    <g:north size='10'>
      <cn:TopPanel ui:field='topPanel' />
    </g:north>
    
    <g:south size='5'>
      <cn:BottomPanel ui:field='bottomPanel' />
    </g:south>
    
    <g:west size='15'>
      <cn:NoteBookListPanel ui:field='notebookListPanel' />
    </g:west>

    <g:center>
      <g:SplitLayoutPanel>
        <g:west size='300'>
          <cn:NoteListPanel ui:field='noteListPanel' />
        </g:west>

<!--         <g:north size='200'>
          <mail:MailList ui:field='mailList' />
        </g:north>
 -->
        <g:center>
          <cn:EditPanel ui:field='editPanel' />
        </g:center>
      </g:SplitLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>

</ui:UiBinder>
