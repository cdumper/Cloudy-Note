<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:com.sid.cloudynote.client.view" xmlns:p1="urn:import:com.axeiya.gwtckeditor.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<s:Container ui:field="container">
		<g:DeckPanel ui:field="deckPanel" height="100%">
			<g:DockLayoutPanel unit="PCT" width="100%" height="100%"
				ui:field="viewPanel">
				<g:north size="20">
					<g:VerticalPanel borderWidth="1" width="100%" height="100%" ui:field="viewNorthPanel">
						<g:Cell verticalAlignment="ALIGN_MIDDLE">
							<g:HorizontalPanel width="100%" ui:field="titlePanel" borderWidth="0">
							<g:Cell verticalAlignment="ALIGN_MIDDLE">
								<g:Label text="Title" horizontalAlignment="ALIGN_LEFT" ui:field="titleLabel" />
							</g:Cell>
							<g:Cell horizontalAlignment="ALIGN_RIGHT"
								verticalAlignment="ALIGN_MIDDLE">
								<g:Button text="Edit" ui:field="editButton" />
							</g:Cell>
						</g:HorizontalPanel>
						</g:Cell>
						<g:Cell verticalAlignment="ALIGN_MIDDLE">
							<g:HorizontalPanel ui:field="propertyPanel" width="100%" borderWidth="0">
							<g:Label text="Tags" ui:field="tagsLabel" horizontalAlignment="ALIGN_LEFT"/>
							<g:Cell height="createdTimeLabel">
								<g:Label text="createdTime" ui:field="createdTimeLabel"/>
							</g:Cell>
						</g:HorizontalPanel>
						</g:Cell>
					</g:VerticalPanel>
				</g:north>
				<g:center>
					<g:HorizontalPanel width="100%" height="100%" borderWidth="0" ui:field="viewCenterPanel">
						<g:HTML wordWrap="true" width="100%" height="100%" ui:field="viewContent">content</g:HTML>
					</g:HorizontalPanel>
				</g:center>

			</g:DockLayoutPanel>
			<g:DockLayoutPanel unit="PCT" width="100%" height="100%" ui:field="editPanel">
				<g:north size="20">
					<g:VerticalPanel borderWidth="1" height="100%" width="100%" ui:field="editNorthPanel">
						<g:Cell verticalAlignment="ALIGN_MIDDLE">
							<g:HorizontalPanel width="100%" ui:field="editTitlePanel">
							<g:Cell verticalAlignment="ALIGN_MIDDLE">
								<g:TextBox width="100%" height="100%" ui:field="editTitle"/>
							</g:Cell>
						</g:HorizontalPanel>
						</g:Cell>
						<g:Cell verticalAlignment="ALIGN_MIDDLE">
							<g:HorizontalPanel width="100%" ui:field="editPropertyPanel" borderWidth="0">
							<g:Label horizontalAlignment="ALIGN_LEFT" text="Tags"/>
							<g:Label text="createdTime"/>
						</g:HorizontalPanel>
						</g:Cell>
					</g:VerticalPanel>
				</g:north>
				<g:center>
					<g:HorizontalPanel borderWidth="0" height="100%" width="100%" ui:field="editCenterPanel">
						<p1:CKEditor width="100%" height="100%" data="content" ui:field="ckeditor"/>
					</g:HorizontalPanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:DeckPanel>
	</s:Container>
</ui:UiBinder> 