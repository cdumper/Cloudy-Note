<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cn="urn:import:com.sid.cloudynote.client.view">
	<ui:style type="com.sid.cloudynote.client.sharing.view.GroupView.Style">
		.container {
			border: 1px solid #999;
			background: #EAEDEF;
			color: #606060;
		}
		
		div.groupList {
			position: relative;
			width: 100%;
			height: 100%;
			float: left;
		}
		
		div.groupList ul {
			list-style: none;
			display: inline;
			padding: 0px;
		}
		
		div.groupList img {
			display: inline;
			margin-left: 45px;
		}
		
		.groupLabel {
			width: 100%;
			padding-left: 20%;
			position: relative;
			list-style: none;
			display: inline;
			text-align: left;
		}
		
		.groupItem {
			background: #EAEDEF;
			position: relative;
			diaplay: inline;
			text-align: left;
			border: 0px solid #006699;
			color: #606060;
			font-size: 14px;
			font-family: Georgia, serif;
		}
		
		.button {
			background: #EAEDEF;
			border-radius: 0px 0px 0px 0px;
			position: relative;
			width: 100%;
			padding-left: 20%;
			display: block;
			text-align: left;
			border: 0px solid #D8D8D8;
			color: #606060;
			font-size: 14px;
			font-family: Georgia, serif;
		}
		
		.label {
			background: #EAEDEF;
			border-radius: 0px 0px 0px 0px;
			position: relative;
			width: 100%;
			padding-left: 20%;
			display: block;
			text-align: left;
			border: 0px solid #D8D8D8;
			color: #606060;
			font-size: 14px;
			font-family: Georgia, serif;
			cursor: auto;
		}
		
		.label:hover,.label:active {
			background: #EAEDEF;
			color: #606060;
			cursor: auto;
			border: 0px solid #999;
		}
		
		div.groupList ul div:hover {
			background: #D8D8D8;
			color: #606060;
		}
		
 		.groupItem:hover,.button:hover {
			background: #D8D8D8;
			color: #606060;
		}
		
		.groupItem:active,.button:active {
			border: 0 solid #ccc !important;
			background: #D8D8D8;
		} 
	</ui:style>
	<cn:Container addStyleNames="{style.container}" ui:field="container">
		<g:HTMLPanel ui:field="content">
			<div class="{style.groupList}">
				<ul>
					<li>
						<g:Button ui:field="publicButton" addStyleNames="{style.button}"
							text="Public" />
					</li>
					<li>
						<g:Button ui:field="sharedButton" addStyleNames="{style.button}"
							text="Shared With Me" />
					</li>
					<li>
						<g:Button addStyleNames="{style.label}" text="Groups" />
					</li>
				</ul>
				<ul ui:field="groupList">
				</ul>
			</div>
		</g:HTMLPanel>
	</cn:Container>
</ui:UiBinder> 