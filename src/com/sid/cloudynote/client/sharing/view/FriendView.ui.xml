<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cn="urn:import:com.sid.cloudynote.client.view">
	<ui:style>
		.container {
			border: 1px solid #999;
		}
	</ui:style>
	<cn:Container addStyleNames="{style.container}" ui:field="container">
		<g:DockLayoutPanel width="100%" height="100%" unit="PCT" ui:field="content">
			<g:west size="25" verticalAlignment="ALIGN_MIDDLE">
				<g:FlowPanel height="100%" width="100%" ui:field="leftPanel">
					<g:HTMLPanel width="100%" ui:field="friendsButtonListPanel">
						<g:Label text="My Friends" />
						<g:Button ui:field="allFriendsButton">All Friends</g:Button>
						<g:Button ui:field="findFriendsButton">Find Friends</g:Button>
					</g:HTMLPanel>
					<g:SuggestBox width="80%" text="Search Friends" ui:field="searchBox" />
					<g:HTMLPanel width="100%" ui:field="groupsPanel">
						<g:Label text="Groups" />
						<g:Button>GWT(4)</g:Button>
					</g:HTMLPanel>
				</g:FlowPanel>
			</g:west>
			<g:center>
				<g:HTMLPanel ui:field="centerPanel" >
					<g:HTMLPanel width="100%" height="10%" ui:field="groupsButtonPanel">
						<g:Button ui:field="createGroupButton">Create Group</g:Button>
						<g:Button ui:field="editGroupButton">Edit Group</g:Button>
						<g:Button ui:field="deleteGroupButton">Delete Group</g:Button>
					</g:HTMLPanel>
					<g:HTMLPanel height="90%" ui:field="friendsListPanel"/>
				</g:HTMLPanel>
			</g:center>
		</g:DockLayoutPanel>
	</cn:Container>
</ui:UiBinder> 