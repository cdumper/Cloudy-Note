<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cn="urn:import:com.sid.cloudynote.client.view">
	<ui:style type="com.sid.cloudynote.client.sharing.view.FriendView.Style"
		src="leftPanel.css" />
			
		<cn:Container addStyleNames="{style.container}" ui:field="container">
		<g:DockLayoutPanel width="100%" height="100%" unit="PCT"
			ui:field="content">
			<g:west size="20">
				<g:FlowPanel addStyleNames="{style.groupList}" ui:field="leftPanel">
					<g:HTMLPanel width="100%" ui:field="friendsButtonListPanel">
						<g:Label addStyleNames="{style.label}" text="Friends" />
						<g:TextBox addStyleNames="{style.textBox}" ui:field="searchBox" />
						<g:Button addStyleNames="{style.button}" ui:field="allFriendsButton">All
							Friends</g:Button>
						<g:Button addStyleNames="{style.button}" ui:field="findFriendsButton">Find
							Friends</g:Button>
					</g:HTMLPanel>
					<g:HTMLPanel addStyleNames="{style.secondBlock}">
						<g:Label addStyleNames="{style.label}" text="Groups" />
						<g:HTMLPanel width="100%" ui:field="groupsPanel" />
					</g:HTMLPanel>
				</g:FlowPanel>
			</g:west>
			<g:center>
				<g:HTMLPanel ui:field="centerPanel">
					<g:HTMLPanel ui:field="groupsButtonPanel"
						addStyleNames="{style.buttonPanel}">
						<g:Button ui:field="createGroupButton">Create Group</g:Button>
						<g:Button ui:field="editGroupButton">Edit Group</g:Button>
						<g:Button ui:field="deleteGroupButton">Delete Group</g:Button>
					</g:HTMLPanel>
					<g:HTMLPanel addStyleNames="{style.hidden}" ui:field="namePanel"
						height="10%">
						<g:Label>Group Name</g:Label>
						<g:TextBox ui:field="groupNameBox">new group</g:TextBox>
					</g:HTMLPanel>
					<g:ScrollPanel width="100%">
						<g:HTMLPanel ui:field="friendsListPanel" />
					</g:ScrollPanel>
				</g:HTMLPanel>
			</g:center>
		</g:DockLayoutPanel>
	</cn:Container>
</ui:UiBinder> 