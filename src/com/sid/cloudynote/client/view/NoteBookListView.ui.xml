<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cn="urn:import:com.sid.cloudynote.client.view">
	<ui:style>
		.container {
			border: 1px solid #999;
			background-color: #EAEDEF;
			height: 100%;
			width: 100%;
		}
		
		.buttonPanel {
			padding-top: 5px;
			padding-left: 5px;
			margin: auto;
			font-size: 12px;
			background-color: #EAEDEF;
			height: 100%;
			width: 100%;
		}
	</ui:style>
	<cn:Container ui:field="container">
		<g:DockLayoutPanel unit='PCT' ui:field="content"
			width="100%" height="100%">
			<g:north size='7'>
				<g:HorizontalPanel ui:field="buttonPanel"
					addStyleNames="{style.buttonPanel}">
					<g:Button ui:field="newNotebookButton" text="New Notebook" />
					<g:Button ui:field="newNoteButton" text="New Note" />
				</g:HorizontalPanel>
			</g:north>
			<g:center>
				<g:ScrollPanel ui:field="scrollPanel" addStyleNames="{style.container}">
					<g:VerticalPanel width='100%' height='100%'>
						<g:DisclosurePanel height="100%" width="100%"
							ui:field="notebookPanel">
							<g:header>Notebooks</g:header>
							<cn:ShowMorePagerPanel ui:field="pagerPanel" />
						</g:DisclosurePanel>
						<g:DisclosurePanel height="100%" width="100%"
							ui:field="tagPanel">
							<g:header>Tags</g:header>
						</g:DisclosurePanel>
					</g:VerticalPanel>
				</g:ScrollPanel>
			</g:center>
		</g:DockLayoutPanel>
	</cn:Container>
</ui:UiBinder> 