<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cn="urn:import:com.sid.cloudynote.client.view">
	<ui:style>
		.container {
			border: 1px solid #999;
		}
		
		.labelContainer {
			color: #404040;
			height: 24px;
			padding-top: 8px;
			padding-left: 20px;
			border-bottom: 1px solid #CED8DF;
		}
		
		.searchContainer {
			background-color: #EAEDEF;
		}
		
		.searchBox {
			margin-top: 5px;
			width: 95%;
		}
	</ui:style>
	<cn:Container ui:field="container">
		<g:DockLayoutPanel unit='PCT' ui:field="content"
			width="100%" height="100%">
			<g:north size='7'>
				<g:VerticalPanel width="100%" height="100%" addStyleNames="{style.searchContainer}">
					<g:TextBox ui:field="searchBox" addStyleNames="{style.searchBox}">Search notes</g:TextBox>
				</g:VerticalPanel>
			</g:north>
			<g:center>
				<g:HTMLPanel height="100%" width="100%" addStyleNames="{style.container}">
					<div class="{style.labelContainer}">
						<g:Label ui:field="notebookLabel" />
					</div>
					<cn:ShowMorePagerPanel ui:field='pagerPanel'
						width="100%" />
				</g:HTMLPanel>
			</g:center>
		</g:DockLayoutPanel>
	</cn:Container>
</ui:UiBinder> 