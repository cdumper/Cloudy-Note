<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cn="urn:import:com.sid.cloudynote.client.view">
	<ui:style>
		.container {
			border: 1px solid #999;
		}
		
		.labelContainer {
			color: #404040;
			height: 24px;
			padding-top: 8px;
			padding-left: 20px;
			border-bottom: 1px solid #CED8DF;
		}
		
		.searchContainer {
			background-color: #EAEDEF;
		}
		
		div.searchPanel {
			cursor: text;
			margin-top: 5px;
			border: 1px solid #B3B3B3;
			border-radius: 5px 5px 5px 5px;
			position: relative;
			background-color: white;
			height: 25px;
		}
		
		.searchBox {
			border-radius: 5px 5px 5px 5px;
			border: 0;
			float: left;
			color: #A2A2A2;
		}
		
		.searchButton {
			border: 0 none;
			height: 25px;
			float: right;
			color: #4C4C4C;
			cursor: pointer;
			font-size: 11px;
			font-weight: bold;
			margin: 0;
			padding: 0 5px;
			border-radius: 0px 5px 5px 0px;
			border-left: 1px solid #B3B3B3;
			background-color: #EAEAEA;
		}
	</ui:style>
	<cn:Container ui:field="container">
		<g:DockLayoutPanel unit='PCT' ui:field="content"
			width="100%" height="100%">
			<g:north size='7'>
				<g:VerticalPanel width="100%" height="100%"
					addStyleNames="{style.searchContainer}">
					<g:HTMLPanel addStyleNames="{style.searchPanel}" ui:field="searchField">
						<g:TextBox ui:field="searchBox" addStyleNames="{style.searchBox}"
							text="Search notes" />
						<g:Button ui:field="searchButton" addStyleNames="{style.searchButton}"
							text="Search" />
					</g:HTMLPanel>
				</g:VerticalPanel>
			</g:north>
			<g:center>
				<g:HTMLPanel height="100%" width="100%" addStyleNames="{style.container}">
					<div class="{style.labelContainer}">
						<g:Label ui:field="notebookLabel" />
					</div>
					<cn:ShowMorePagerPanel ui:field='pagerPanel'
						width="100%" />
				</g:HTMLPanel>
			</g:center>
		</g:DockLayoutPanel>
	</cn:Container>
</ui:UiBinder> 